# Event Logging System Configuration
# Copy this to your .env file and adjust values as needed

# Enable/disable event logging (default: true)
EVENT_LOGGING_ENABLED=true

# Log level: INFO, WARNING, ERROR (default: INFO)
EVENT_LOG_LEVEL=INFO

# Batch processing settings
EVENT_BATCH_SIZE=100
EVENT_FLUSH_INTERVAL=5000

# Request logging settings
LOG_ALL_REQUESTS=false
LOG_ONLY_ERRORS=false
LOG_REQUEST_BODY=false
LOG_RESPONSE_BODY=false

# TTL for events in seconds (null = no expiration)
# 31536000 = 1 year, 2592000 = 30 days, 604800 = 7 days
EVENT_TTL=31536000